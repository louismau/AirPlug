<h1>My charging points</h1>

<div class="card-product">
  <% @user.plugs.each do |plug| %>
    <% if plug.photos.attached? %>
      <%= cl_image_tag plug.photos.first.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <% end %>    
    <div class="card-product-infos">
      <h2><%= link_to plug.address, plug_path(plug.id) %></h2>
    </div>
  <% end %>
</div>
<br/>
<p><%= link_to "Add a Charging Point", new_plug_path, class: 'btn btn-primary' %></p>
