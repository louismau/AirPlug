<div class='text-center m-3'>
  <h1>AirCharge</h1>
  <h3>Find charging spots for your electric cars</h3>
</div>

<div class='d-flex'>

  <div id='search-filter' class='border bg-white mx-3 p-4 rounded' style="width: 30%; height: 600px">
    <h5>Search & Filter</h5>
  </div>

  <div id="map"
      style="width: 100%; height: 600px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<p class='m-4 text-center'><%= link_to "New plug", new_plug_path, class: 'btn btn-primary' %></p>

